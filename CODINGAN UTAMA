//Tugas Kelompok Pemrograman Struktur
//Program Permainan Pencarian Kata

#include<iostream>
#include <bits/stdc++.h>
#include <conio.h>
  
  using namespace std;
  int a,b,jumlah,c,d,e,f;
	int character;
	 int tmp=0;
	 int temp;
	 int check[1]={0};
	char A[100][100];
	char words[0];
  const  char soal[15][15] = {{'t','g','b','w','w','i','n','t','e','r','w','s','e','s','n'},
                         {'a','a','u','n','t','t','m','m','h','f','o','o','d','n','b'},
                         {'j','l','w','c','q','l','d','z','m','p','m','v','d','m','r'},
                         {'a','s','a','g','m','q','u','w','v','v','b','s','o','h','i'},
                         {'b','w','p','l','o','t','a','n','a','d','t','p','g','n','c'},
                         {'r','e','w','n','g','o','d','j','c','p','n','a','t','n','k'},
                         {'e','e','o','t','w','o','s','b','q','h','a','r','r','s','a'},
                         {'a','z','c','g','e','s','w','e','w','n','a','k','n','p','b'},
                         {'d','i','n','n','e','r','q','o','d','l','w','d','c','a','r'},
                         {'o','n','o','p','k','w','m','p','a','r','k','t','z','c','c'},
                         {'q','b','f','r','o','g','m','a','m','w','p','w','e','e','y'},
                         {'l','q','z','q','n','n','m','r','z','j','j','s','c','l','g'},
                         {'m','o','s','g','z','c','z','e','t','d','b','o','o','t','o'},
			 {'p','d','c','r','z','m','s','n','g','r','d','n','r','p','z'},
			 {'o','h','n','k','z','w','a','t','e','r','j','g','t','r','a'}};
 
void display()
{
						 
    for(a=0;a<15;++a){
    for(b=0;b<15;++b){
    cout<<"|"<<soal[a][b]<<"|";
    }
    cout<<endl;
	}
}
bool result(int n)
{
	if (temp>0)
	{
		cout<<true<<endl;
	
	}
	else
	{
		cout<<false<<endl;
	}
}


  int main ()
{  	menu:
	display();
			 
	cout<<"what words do you want to find : ";
	cin>>words;
//	cout<< strlen(words);
	

//pencarian Secara Horizontal
	for(a=0;a<15;a++)
	{
		for(b=0;b<15;b++)
		{
			if(words[0]==soal[a][b])
			{
				for(c=0;c<strlen(words);c++)
				{
					if(words[c]==soal[a][(b+c)] )
					{
						tmp=c;
					}
					else
					{
						tmp!=c;
						break;
					}
				}
			}
			if(tmp==(strlen(words)-1))
			{
				temp+=1;
			}
			else
			{
				temp;
			}
			tmp=check[0];
//Pencarian Secara Vertical
			for(c=0;c<strlen(words);c++)
				{
					if(words[c]==soal[a+c][(b)] )
					{
						tmp=c;
					 }
					else
					{
						tmp!=c;
						break;
					}
				}
			if(tmp==(strlen(words)-1))
			{
				temp+=1;
			}
			else
			{
				temp;
			}
			tmp=check[0];
			for(c=0;c<strlen(words);c++)
				{
					if(words[c]==soal[(a+c)][(b+c)] )
					{
						tmp=c;
					 }
					else
					{
						tmp!=c;
						break;
					}
				}
			if(tmp==(strlen(words)-1))
			{
				temp+=1;
			}
			else
			{
				temp;
			}
			tmp=check[0];
//Pencarian Secara Diagonal
			for(c=0;c<strlen(words);c++)
				{
					if(words[c]==soal[a+c][(b-c)] )
					{
						tmp=c;
					 }
					else
					{
						tmp!=c;
						break;
					}
				}
			if(tmp==(strlen(words)-1))
			{
				temp+=1;
			}
			else
			{
				temp;
			}
		}
	}
	
result(temp);

	kembali:
		char kembali;
		cout<<"Ingin mencari kata lagi? (Y/T) ?";
		cin>>kembali;
		if (kembali=='Y' || kembali=='y') {goto menu;}
		else if (kembali=='T' || kembali=='t') {exit (0);}
		else {goto kembali;}


	
	

}

    	
	

	
	
	
	
	

	
